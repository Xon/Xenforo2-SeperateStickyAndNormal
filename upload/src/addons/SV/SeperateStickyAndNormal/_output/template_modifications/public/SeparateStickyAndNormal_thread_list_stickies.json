{
    "template": "forum_view",
    "description": "Stickie Threads",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<div class=\"structItemContainer-group structItemContainer-group--sticky\">",
    "replace": "<xf:if is=\"{$stickyThreads} AND {$threads}\">\n<div class=\"structItemContainer-group structItemContainer-group--sticky-block\">\n\t<div class=\"structItem structItem--thread\">\n\t\t<div class=\"structItem-cell structItem-cell--icon\"></div>\n\t\t<div class=\"structItem-cell structItem-cell--main\">{{ phrase('seperator_sticky_threads') }}</div>\t\n\t\t<div class=\"structItem-cell structItem-cell--meta\"></div>\n\t\t<div class=\"structItem-cell structItem-cell--latest\"></div>\n    </div>\n</div>\n</xf:if>\n$0"
}